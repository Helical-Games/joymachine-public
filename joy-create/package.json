{
  "name": "joy-create",
  "productName": "joy-create",
  "description": "Very, very work-in-progress electron app for a procedural generation (shape-based) system.",
  "version": "v0.0.2",
  "author": "Joy Machine",
  "copyright": "Â© 2015-2018 Joy Machine",
  "homepage": "https://joy-machine.com",
  "license": "MIT",
  "repository": "https://github.com/joymachinegames/joymachine-public",
  "keywords": [
    "electron",
    "procedural",
    "games",
    "joy",
    "joymachine"
  ],
  "main": "app/background.js",
  "build": {
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "publish": null
  },
  "scripts": {
    "build": "gulp build",
    "prerelease": "gulp build --env=production",
    "release": "build",
    "devstart": "gulp devstart",
    "start": "gulp start",
    "pretest": "gulp build-unit --env=test",
    "test": "electron-mocha app/specs.js.autogenerated --renderer --require source-map-support/register",
    "coverage": "npm test -- -R scripts/istanbul-reporter",
    "pree2e": "gulp build-e2e --env=test",
    "e2e": "mocha app/e2e.js.autogenerated --require source-map-support/register"
  },
  "dependencies": {
    "dat-gui": "^0.5.0",
    "jshint": "^2.9.5",
    "mkdirp": "^0.5.1",
    "monaco-editor": "^0.10.1",
    "npm": "^6.14.6",
    "stats-js": "^1.0.0-alpha1",
    "three": "^0.125.0",
    "three-orbit-controls": "^82.1.0",
    "three.meshline": "^1.0.3"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "colors": "^1.2.1",
    "devtron": "^1.4.0",
    "electron": "^9.4.0",
    "electron-builder": "^20.8.1",
    "electron-mocha": "^6.0.1",
    "elemon": "^5.0.3",
    "fs-jetpack": "^1.3.0",
    "globby": "^7.1.1",
    "gulp": "^4.0.0",
    "gulp-batch": "^1.0.5",
    "gulp-clean": "^0.4.0",
    "gulp-less": "^3.5.0",
    "gulp-plumber": "^1.2.0",
    "gulp-promise": "^1.0.2",
    "gulp-watch": "^5.0.0",
    "istanbul": "^0.4.5",
    "minimist": "^1.2.0",
    "mocha": "^5.0.5",
    "path": "^0.12.7",
    "promise": "^8.0.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.54.1",
    "rollup-plugin-istanbul": "^2.0.1",
    "source-map-support": "^0.5.4",
    "spectron": "^3.8.0",
    "vendor-copy": "^1.3.1"
  },
  "vendorCopy": [
    {
      "from": "node_modules/monaco-editor/min/vs",
      "to": "app/vendor/vs"
    }
  ],
  "jshintConfig": {
    "esversion": 6
  }
}
